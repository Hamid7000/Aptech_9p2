
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body>
    <h1 class="text-center mb-5 mt-5">Your Cart</h1>
    <table class="table container">
        <tr>
            <td>Product Name</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Image</td>
            <td>Total</td>
        </tr>
        @foreach (var item in Context.Session.Get<List<item>>("cart"))
        {
            <tr>
                <td>@item.productdate.pro_name</td>
                <td>@item.productdate.price</td>
                <td>@item.cart_qty</td>
                <td><img src="~/images/@item.productdate.pro_image" height="50" width="50" /></td>
                <td>@(item.cart_qty*item.productdate.price)</td>
            </tr>
        }
        <tr>
            <td colspan="4">Total Amount</td>
            <td>
                @{
                    List<item> cart = Context.Session.Get<List<item>>("cart");
                    var total = (from data in cart select data.productdate.price * data.cart_qty).Sum();
                }
                @total
            </td>
        </tr>

    </table>

</body>
</html>
