@model product
@{
    ViewData["Title"] = "edit";
    Layout = "~/Views/Shared/master.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Category</h3>
        <a asp-controller="pro" asp-action="index" class="btn btn-danger float-right">Back</a>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="pro" asp-action="edit" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Product Name</label>
                <input asp-for="pro_name" type="Name" class="form-control" id="exampleInputEmail1" placeholder="Enter Product Name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Price</label>
                <input asp-for="price" type="Name" class="form-control" id="exampleInputEmail1" placeholder="Enter Price">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Quantity</label>
                <input asp-for="qty" type="Name" class="form-control" id="exampleInputEmail1" placeholder="Enter Quantity">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Category</label>
                <select class="form-control" asp-for="categorycat_id" asp-items="ViewBag.data">  </select>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Image</label>
                <input asp-for="pro_image" type="file" class="form-control" id="exampleInputEmail1" placeholder="Select Image">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

